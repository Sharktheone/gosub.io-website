---

import Logo from "./logo.astro"
import sidebarStyles from "./sidebar/sidebar.module.scss"

---


<nav>
    <Logo className={sidebarStyles.logo} size="64"/>
</nav>

<style>
    nav {
        box-sizing: border-box;
        padding: 1rem 2px 1rem 0;
        position: fixed;
        background-color: #140727;
        height: 100svh;
        width: calc(4rem + 2px);
        border: 2px solid #60F2EC;
        border-left: none;
        border-radius: 0 1rem 1rem 0;
    }
</style>
